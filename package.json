{
  "name": "unveil",
  "version": "1.0.0",
  "description": "Solana Privacy Protocol Benchmark Tool",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "concurrently \"npm run api\" \"npm run dashboard\"",
    "api": "tsx src/api/server.ts",
    "dashboard": "cd src/dashboard && npm run dev",
    "index": "tsx src/indexer/index.ts",
    "setup": "npm install && cd src/dashboard && npm install && cd ../.. && echo Setup complete!",
    "db:init": "tsx src/indexer/db.ts",
    "analyze": "tsx src/analysis/index.ts",
    "realtime": "tsx src/realtime.ts",
    "dev:live": "concurrently \"npm run realtime\" \"npm run dashboard\"",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "solana",
    "privacy",
    "benchmark",
    "blockchain",
    "analytics"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@noble/hashes": "^2.0.1",
    "@silentswap/sdk": "^0.0.48",
    "@solana/web3.js": "^1.87.6",
    "better-sqlite3": "^9.2.2",
    "bs58": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helius-sdk": "^1.3.3",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  }
}
